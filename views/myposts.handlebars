<section class="container mb-3" id="myposts"><h1>  Your Posts</h1></section>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  axios.get('/api/validate/users/1',
      {
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('token')}`
        }
      })
  .then(res=>{
    axios.get(`/api/users/posts/${res.data}`)
      .then(posts => {
        for (let i = 0; i < posts.data.length; i++) {
          let elem = $(`
        <div class="card mb-3" style="width: 100%;">
          <div class="row g-0">
            <div class="col-md-1 text-center center align-self-center">
              
          <p class="d-block">${posts.data[i].score}</p>
          
            </div>
    <div class="col-md-11">
      <div class="card-body">
        <h5 class="card-title"><a href="/posts/${posts.data[i].id}">${posts.data[i].title}</a></h5>
        <p class="card-text">${posts.data[i].body.slice(0, 250)} ...</p>
        <div class="col-md-19">
          <small class="text-muted">created on ${posts.data[i].updatedAt.slice(0, 10)}</small>
        </div>
        <div class="col-md-2">
          <a href="/posts/${posts.data[i].id}" class="btn btn-outline-dark" role="button">View Full Post</a>
          <button onclick="deletePost(${posts.data[i].id}, ${res.data})" class="btn btn-danger delete">delete post</button>
          <a href="/editpost/${posts.data[i].id}" class="btn btn-outline-dark" role="button">Edit Post</a>
        </div>
        </p>
      </div>
    </div>
  </div>
</div>
      `)
          $('#myposts').append(elem)
        }
      })
  })
  function deletePost(pid, uid) {
        axios.delete(`/posts/${pid}`, {
          headers: {
            'Authorization': `Bearer ${localStorage.getItem('token')}`
          }
        })
          .then(res2 => {
            console.log('post deleted')
            location.reload()
          })
          .catch(err => console.log(err))
      }
</script>
